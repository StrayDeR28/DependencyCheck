{
  "name": "dependency-check",
  "displayName": "OWASP Dependency Check Extension",
  "description": "Implementation of OWASP dependency check for open project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [], 
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dependency-check.runDependencyCheck",
        "title": "Dependency Check: DC Run"
      },
      {
        "command": "dependency-check.setOptions",
        "title": "Dependency Check: Set Options"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Dependency Check Settings",
      "properties": {
        "dependency-check.pathToDC": {
          "type": "string",
          "default": "",
          "description": "Write here path to the dependency-check bin folder (C:\\dependency-check\\bin)"
        },
        "dependency-check.pathToMaven": {
          "type": "string",
          "default": "",
          "description": "Write here path to the Maven"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
